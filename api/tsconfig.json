{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"declaration": false,
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src"
	]
}
